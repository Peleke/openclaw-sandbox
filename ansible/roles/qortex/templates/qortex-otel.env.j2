# {{ ansible_managed }}
# systemd EnvironmentFile format (no 'export' keyword).
# Loaded by openclaw-gateway.service via EnvironmentFile=-
QORTEX_OTEL_ENABLED={{ qortex_otel_enabled | string | lower }}
OTEL_EXPORTER_OTLP_ENDPOINT={{ qortex_otel_endpoint }}
OTEL_EXPORTER_OTLP_PROTOCOL={{ qortex_otel_protocol | default('http/protobuf') }}
QORTEX_PROMETHEUS_ENABLED={{ qortex_prometheus_enabled | default(false) | string | lower }}
QORTEX_PROMETHEUS_PORT={{ qortex_prometheus_port | default(9090) }}
# Concept extraction strategy (spacy, llm, none)
QORTEX_EXTRACTION={{ qortex_extraction | default('spacy') }}
# Skip HuggingFace network verification at runtime â€” model is pre-cached during provisioning
HF_HUB_OFFLINE=1
{% if memgraph_enabled | default(false) | bool %}
# Memgraph persistent graph backend
QORTEX_GRAPH=memgraph
MEMGRAPH_HOST={{ memgraph_host | default('localhost') }}
MEMGRAPH_PORT={{ memgraph_bolt_port | default(7687) }}
MEMGRAPH_USER={{ memgraph_user | default('memgraph') }}
MEMGRAPH_PASSWORD={{ memgraph_password | default('memgraph') }}
{% endif %}
# Feature flags (override flags.py defaults)
QORTEX_TELEPORTATION={{ qortex_teleportation | default(memgraph_enabled | default(false)) | string | lower }}
QORTEX_CREDIT_PROPAGATION={{ qortex_credit_propagation | default(memgraph_enabled | default(false)) | string | lower }}

# {{ ansible_managed }}
# Memgraph persistent graph backend for qortex
# Uses host networking â€” Docker bridge NAT breaks Bolt protocol on Lima VMs
services:
  memgraph:
    image: {{ memgraph_image }}
    container_name: qortex-memgraph
    network_mode: host
    volumes:
      - memgraph_data:{{ memgraph_data_dir }}
      - memgraph_log:/var/log/memgraph
    environment:
      - MEMGRAPH_USER={{ memgraph_user }}
      - MEMGRAPH_PASSWORD={{ memgraph_password }}
    command: ["--also-log-to-stderr"]
    healthcheck:
      test: ["CMD", "python3", "-c", "import socket; s=socket.socket(); s.settimeout(2); s.connect(('localhost',7687)); s.close()"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    restart: unless-stopped

{% if memgraph_lab_enabled | default(true) %}
  memgraph-lab:
    image: {{ memgraph_lab_image | default('memgraph/lab:latest') }}
    container_name: qortex-memgraph-lab
    network_mode: host
    environment:
      - QUICK_CONNECT_MG_HOST=localhost
      - QUICK_CONNECT_MG_PORT={{ memgraph_bolt_port }}
    depends_on:
      memgraph:
        condition: service_healthy
    restart: unless-stopped
{% endif %}

volumes:
  memgraph_data:
  memgraph_log:
